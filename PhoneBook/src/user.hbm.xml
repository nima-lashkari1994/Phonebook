<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="ir.maktab.phoneBook.model.user.User" table="users">
    <id name="userName" type="string" column="User_Name">

    </id>
    <property name="password" column="password" type="string" />
    
    <many-to-one name="role" class="ir.maktab.phoneBook.model.role.Role" column="Role" cascade="all" not-null="true" />
    
  </class>
</hibernate-mapping>
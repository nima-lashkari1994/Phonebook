<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ir.maktab.phoneBook.model.role.Role" table="roles">
		<id name="name" type="string" column="Name">

		</id>

		<set name="features" table="role_feature" inverse="false" lazy="true"
			fetch="select" cascade="all">
			<key>
				<column name="Role" not-null="true" />
			</key>
			<many-to-many entity-name="ir.maktab.phoneBook.model.feature.Feature">
				<column name="Feature" not-null="true" />
			</many-to-many>
		</set>

	</class>
</hibernate-mapping>